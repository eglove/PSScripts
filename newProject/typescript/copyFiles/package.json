{
  "name": "REPLACE_NAME",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "pretest": "yarn lint && tsc --noEmit",
    "lint": "eslint .. --cache --fix --ext .ts, .tsx",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test": "yarn test:jest --",
    "lint:css": "stylelint '**/*.css'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{js,css}": "stylelint"
  }
}